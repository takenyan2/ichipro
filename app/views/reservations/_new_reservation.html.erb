<% provide(:class_text, 'edit-info') %>
<% provide(:button_text, '予約') %>



<%= include_gon %>

<div class="modal-dialog modal-lg" role="document">
  <div class="modal-content">
    <div class="modal-header">
      予約画面
    </div><!-- /.modal-header  -->
    <%= form_with(model: @reservation, url: reservations_path, local: true, method: :post) do |f| %>
      <div class="modal-body">
        <div class="form-group row">
            <%= f.label "予約者名", class: "label-login col-sm-2 lead text-center mr-4 text-sm-right offset-sm-1" %>
            <%= f.text_field :user_name, class: 'form-control col-sm-6' %>
        </div>
        <div class="form-group row">
            <%= f.label "予約者カナ名", class: "label-login col-sm-2 lead text-center mr-4 text-sm-right offset-sm-1" %>
            <%= f.text_field :user_kana_name, class: 'form-control col-sm-6' %>
        </div>
        <div class="form-group row">
            <%= f.label "メールアドレス", class: "label-login col-sm-2 lead text-center mr-4 text-sm-right offset-sm-1" %>
            <%= f.email_field :user_email, class: 'form-control col-sm-6' %>
        </div>
         <div class="form-group row">
            <%= f.label "電話番号", class: "label-login col-sm-2 lead text-center mr-4 text-sm-right offset-sm-1" %>
            <%= f.telephone_field :user_phone_number, class: 'form-control col-sm-6' %>
        </div>
        <div class="form-group row">
            <%= f.label "生年月日", class: "label-login col-sm-2 lead text-center mr-4 text-sm-right offset-sm-1" %>
            <%= f.date_field :birthday, class: 'form-control col-sm-6' %>
        </div>
        <div class="form-group row">
            <%= f.label "メニュー", class: "label-login col-sm-2 lead text-center mr-4 text-sm-right offset-sm-1" %>
            <%# menu_options = Menu.order(:id).map { |c| [c.menu_title, c.id, data: { children_path: menu_courses_path(c) }] } %>
            <%= f.collection_select :menu_id, Menu.group(:menu_title).order(id: :desc), :id, :menu_title, {prompt: ""} %>
            <%#= f.select :menu_id, menu_options, { include_blank: true }, class: 'select-parent', id: "resesrvation_menu_id"  %>
        </div>
        <div class="form-group row">
            <%= f.label "コース", class: "label-login col-sm-2 lead text-center mr-4 text-sm-right offset-sm-1" %>
            <%# courses = @reservation.menu.try(:courses) || [] %>
            <%# course_options = courses.map { |c| [c.course_name, c.id] } %>
            <%#= f.select :course_id, course_options, { include_blank: true }, class: 'select-children' %>
            <%#= f.collection_select :course_id, Course.group(:course_name).order(id: :desc), :id, :course_name, {prompt: ""} %>
            <select name="reservation[course_name]" id="reservation_course_name"></select>
        </div>
        <div class="form-group row">
          <%= f.label "コース時間", class: "label-login col-sm-2 lead text-center mr-4 text-sm-right offset-sm-1" %>
          <%= f.text_field :request_course_time, class: 'form-control col-sm-6', disabled: "disabled" %>
        </div>  
        <div class="form-group row">
          <%= f.label "StartTime", class: "label-login col-sm-2 lead text-center mr-4 text-sm-right offset-sm-1" %>
          <%= raw sprintf(f.datetime_select(
                                        :start_time, 
                                        default: Time.zone.local(@week_day.to_date.year,@week_day.to_date.month,@week_day.to_date.day,
                                                                @selected_start_time.to_time.hour,@selected_start_time.to_time.min),
                                        minute_step: 30,
                                        start_year: Time.now.year,
                                        end_year: Time.now.since(2.month).year,
                                        use_month_numbers: true, 
                                        date_separator: '%s', 
                                        time_separator: "%s",
                                        datetime_separator: '%s'), '年', '月', '日',"時")
           %>分
        </div>
        <div class="form-group row">
            <%= f.label "ご要望", class: "label-login col-sm-2 lead text-center mr-4 text-sm-right offset-sm-1" %>
            <%= f.text_area :demand, class: 'form-control col-sm-6' %>
        </div>
        <div class="error-message text-danger" style="text-align:center;"></div>
        <!--<div class="form-group row">-->
        <!--  <%#= f.label "Usage time", class: "label-login col-sm-2 lead text-center mr-4 text-sm-right offset-sm-1" %>-->
        <!--  <#= select_tag('usage_time',options_for_select([[30, 30], [60, 60], [90, 90], [120, 120]]))%>分-->
        <!--</div>-->
      </div><!-- /.modal-body -->
      <div class="modal-footer">
        <span class="mx-auto">
          <button type="button" class="btn btn-secondary mx-3" data-dismiss="modal">
            キャンセル
          </button>
          <%= f.submit yield(:button_text), class: "btn btn-primary px-4 mx-3" %>
        </span>
      </div><!-- /.modal-footer -->
    <% end %>
  </div><!-- /.modal-content -->
</div><!-- /.modal-dialog -->
<script>
  var now = new Date();
  
  function select_date(){
    var year = $("#reservation_start_time_1i").val();
    var month = $("#reservation_start_time_2i").val() - 1;
    var day = $("#reservation_start_time_3i").val();
    var hour = $("#reservation_start_time_4i").val();
    var min = $("#reservation_start_time_5i").val();
    var date = new Date(year, month, day, hour, min);
    return date;
  }
  
  var two_month_date = new Date(now.getFullYear(), now.getMonth()+2, now.getDate(), now.getHours(), now.getMinutes());
  function alert(now,date,two_month_date){
    if(now > date){
      $(".error-message").text("過去の時間は予約できません");
      $(".disabled").attr('disabled', true);
    }else if(date > two_month_date){
      $(".error-message").text("２ヶ月先は予約できません");
      $(".disabled").attr('disabled', true);
    }else{
      $(".error-message").text("");
      $(".disabled").attr('disabled', false);
    }
  }
  $("#reservation_start_time_1i").change(function() {
    select_date();
    alert(now,select_date(),two_month_date);
  });
  
  $("#reservation_start_time_2i").change(function() {
    select_date();
    alert(now,select_date(),two_month_date);
  });
  
  $("#reservation_start_time").change(function() {
    select_date();
    alert(now,select_date(),two_month_date);
  });
  
  $("#reservation_start_time_4i").change(function() {
    select_date();
    alert(now,select_date(),two_month_date);
  });
  
  $("#reservation_start_5i").change(function() {
    select_date();
    alert(now,select_date(),two_month_date);
  });
  
  $(document).on('hidden.bs.modal', '.modal', function(){
    $(this).removeData('bs.modal').empty();
  });
  
  


$(function() {
  // select要素を予め取得しておく
  var $reservation_menu_id = $('#reservation_menu_id');
  var $reservation_course_name = $('#reservation_course_name');
  var $reservation_request_course_time = $('#reservation_request_course_time');
 
  // メニュー選択時にコースに選択肢を設定
  $reservation_menu_id.change(function(e) {
    var reservation_courses = [];
    var reservation_menu_id = $reservation_menu_id.val();
    
    $('#reservation_course_name').children().remove();
    
    // 選択したメニューに紐づくコースの配列を取得
    $.each(gon.course_array, function(index, value) {
      if (value[0] == reservation_menu_id){
        reservation_courses.push(value[1]);
      }
　　});
    
    // htmlにコースの選択肢のブランクオプションをセット
    var $option_tag = $('<option>').val('').text('選択してください');
      $reservation_course_name.append($option_tag);
    
    // htmlにコースの選択肢を追加
    reservation_courses.forEach(function(course_name) {
      var $option_tag = $('<option>').val(course_name).text(course_name);
      $reservation_course_name.append($option_tag);
    });
  });
  
  
  $reservation_course_name.change(function(e) {
    var reservation_menu_id = $reservation_menu_id.val();
    var reservation_course_name = $reservation_course_name.val();
    
    // 選択したコースに紐づくコース時間を取得
    $.each(gon.course_time_array, function(index, value) {
      if (value[0] == reservation_menu_id && value[1] == reservation_course_name){
        reservation_course = value[2]
      }
　　});
    // htmlにコース時間を表示
    console.log(reservation_course);
      $reservation_request_course_time.val(reservation_course);
  });
  
});
</script>