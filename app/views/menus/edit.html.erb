<h1>コースを編集する</h1>

	<%= form_with(model: @course, url: menu_path,local: true) do |f| %>
      <div class="form">
      	<%#= f.hidden_field :menu_id, :value => @course.menu.id %>
      	<%= f.hidden_field :menu_id, value: @course.id %>
      	<dt class="form-title">コース名：<%= f.text_field :course_name %></dt>
        <dd class="form-item"><%= f.select :course_time, [["15", 15],["30", 30], ["45", 45], ["60", 60], ["75", 75], ["90", 90], ["105", 105], ["120", 120], ["135", 135], ["150", 150], ["165", 165], ["180", 180]]  %>分</dd>
        <dd class="form-item"><%= f.number_field :price %>円</br></dd> 
        <%= hidden_field_tag :permission, false %>
      </div>
        <%= f.submit "更新する" %>
    <% end %>