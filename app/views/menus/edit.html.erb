<div class="main">
  <div class="block">
      <h2 class="bg_sunflower">コースを編集する</h2>
    <div class="contents">
  <%= form_with(model: @course, url: menu_path,local: true) do |f| %>
      <div class="form">
			<dl>
				<dt class="form-title">コース名</dt>
				<dd class="form-item"><%= f.text_field :course_name, required: true, maxlength: 50, class: "" %></dd>
			</dl>
		</div>
		<div class="form">
			<dl>
				<dt class="form-title">コース時間</dt>
				<dd class="form-item"><%= f.select :course_time, [["30", 30], ["60", 60], ["90", 90], ["120", 120], ["150", 150], ["180", 180]], class: "" %>分</dd>
			</dl>
		</div>
		<div class="form">
			<dl>
				<dt class="form-title">価格</dt>
				<dd class="form-item"><%= f.number_field :price, required: true, min: 0, class: "" %>円</dd>

				<%= hidden_field_tag :permission, true %>
			</dl>
      </div>
        <%#= f.hidden_field :menu_id, value: false%>
        <%= f.submit "更新する", class: "btn btn-info btn-lg px-5 offset-5" %>
    <% end %>
     </div> 
 </div>
</div>
