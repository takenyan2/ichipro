<h1>コースを編集する</h1>

	<%= form_with(model: @course, url: menu_path,local: true) do |f| %>
      <div class="form">
      	<%#= f.hidden_field :menu_id, :value => @course.menu.id %>
      	<%#= f.hidden_field :menu_id, value: @course.id %>
      	<dt class="form-title">コース名：<%= f.text_field :course_name, required: true, maxlength: 50 %></dt>
        <dd class="form-item"><%= f.select :course_time, [["30", 30], ["60", 60], ["90", 90], ["120", 120], ["150", 150], ["180", 180]]  %>分</dd>
        <dd class="form-item"><%= f.number_field :price, required: true, min: 0 %>円</br></dd> 
        <%= hidden_field_tag :permission, false %>
      </div>
        <%= f.submit "更新する" %>
    <% end %>