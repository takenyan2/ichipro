<h1>コースの追加</h1>
	<%= form_with(model: @menu,local: true) do |f| %>
      <div class="form">
        <h4>メニュー名</h4>
        <%= f.text_field :menu_title %>
        <h4>画像</h4>
        <%= f.attachment_field :menu_image %>
      </div>
      <div class="form">
        <h4>紹介文</h4>
        <%= f.text_area :introduce %>
        <%= f.hidden_field :permission, value: true %>
      </div>
        <%= f.hidden_field :menu_id, value: false%>
        <%= f.submit "追加する" %>
    <% end %>