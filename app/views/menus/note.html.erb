    <% @questions.each do |question|%>
      <dl><dt> Q.<%= question.user_question %>
      <button style="background: yellow;"><%= link_to "編集", edit_note_path(question.id) %></button>
      <button style="background: yellow;"><%= link_to "削除", edit_note_path(question.id, permission: true), delete: "question", method: :delete,"data-confirm" => "本当に削除しますか？" %></button></dt> 

      <dd> A.<%= question.answer %></dd></dl>
    <% end %>
    </div>
  </div>

  <% if current_admin %>
    <div class="hidden_box">
      <label for="label1">Q&Aを追加</label>
      <input type="checkbox" id="label1" style="display: none;"/>
        <div class="hidden_show">
          <!--非表示ここから-->
          <div class="contents">
            <h4>Q&Aの追加</h4>
            <div class="form">
              <dl>
                <%= form_with(model: @question, url: menus_note_path ,local: true) do |f| %>
                  <dt class="form-title">質問文</dt>
                  <dd class="form-item"><%= f.text_field :user_question, required: "required", maxlength: 100 %></dd>
                  <dt class="form-title">答え</dt>
                  <dd class="form-item"><%= f.text_area :answer, required: "required", maxlength: 200 %></dd>
                  <%#= f.hidden_field :id, value: @question.id %>
                  <%= f.submit "追加する" %>
                <% end %>
              </dl>
            </div>
            <!--ここまで-->
          </div>
        </div>
    </div>
  <% end %>
</div>
